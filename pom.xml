<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.dieschnittstelle.ess</groupId>
    <artifactId>ess-deployment</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>ESS Deployment</name>

    <!-- these are the shared properties for deploying all server-side
         components within a wildfly executable jar -->
    <properties>
        <!-- specs versions -->
        <version.microprofile>3.3</version.microprofile>
        <version.jakartaee>8.0.0</version.jakartaee>
        <!-- server versions -->
        <version.wildfly>25.0.0.Final</version.wildfly>
        <version.tomee>8.0.9</version.tomee>
        <!-- additional libs versions -->
        <version.jpa>2.2.3</version.jpa>
        <version.transactionapi>1.3</version.transactionapi>
        <version.h2>1.4.186</version.h2>
        <version.log4j>2.15.0</version.log4j>
        <version.junit>4.12</version.junit>
        <version.commons.io>2.9.0</version.commons.io>
        <version.commons.lang>2.6</version.commons.lang>
        <!-- mainly for clients -->
        <version.resteasy.client>3.6.3.Final</version.resteasy.client>
        <version.httpclient>4.5.5</version.httpclient>
        <version.httpasyncclient>4.1.3</version.httpasyncclient>
        <version.jackson>2.10.3</version.jackson>
        <version.jaxrs.wsv>2.1.1</version.jaxrs.wsv>
        <!-- further settings -->
        <plugin.fork.embedded>true</plugin.fork.embedded>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

</project>
